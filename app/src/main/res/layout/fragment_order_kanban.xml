<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".ui.order.OrderKanbanFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingVertical="@dimen/spacing_md">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Management"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xl"
            android:textStyle="bold" />

        <!-- Search Box -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/spacing_lg"
            android:background="@drawable/bg_input"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/spacing_md">

            <ImageView
                android:layout_width="@dimen/icon_size_sm"
                android:layout_height="@dimen/icon_size_sm"
                android:src="@drawable/ic_search"
                android:contentDescription="Search" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/spacing_sm"
                android:background="@android:color/transparent"
                android:hint="@string/search_orders"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_tertiary"
                android:textSize="@dimen/text_size_sm"
                android:inputType="text"
                android:imeOptions="actionSearch" />

        </LinearLayout>

        <!-- Live System Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="@dimen/spacing_md">

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/indicator_done" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/live_system"
                android:textColor="@color/status_success"
                android:textSize="@dimen/text_size_sm" />

        </LinearLayout>

        <!-- New Order Button -->
        <Button
            android:id="@+id/btn_new_order"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/bg_button_primary"
            android:drawableStart="@drawable/ic_add"
            android:drawablePadding="@dimen/spacing_xs"
            android:paddingHorizontal="@dimen/spacing_md"
            android:text="@string/new_order"
            android:textColor="@color/background_primary"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_sm" />

    </LinearLayout>

    <!-- View Toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:paddingBottom="@dimen/spacing_md">

        <Button
            android:id="@+id/btn_kanban_view"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/bg_button_primary"
            android:paddingHorizontal="@dimen/spacing_md"
            android:text="@string/kanban_view"
            android:textColor="@color/background_primary"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_sm" />

        <Button
            android:id="@+id/btn_list_view"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/spacing_sm"
            android:background="@android:color/transparent"
            android:paddingHorizontal="@dimen/spacing_md"
            android:text="@string/list_view"
            android:textColor="@color/text_secondary"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_sm" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/btn_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/spacing_xs"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sorted_by"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_sm" />

            <TextView
                android:id="@+id/sort_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:text="@string/newest_first"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_sm" />

        </LinearLayout>

    </LinearLayout>

    <!-- Kanban Columns -->
    <HorizontalScrollView
        android:id="@+id/kanban_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/spacing_md">

            <!-- Queue Column -->
            <include
                android:id="@+id/column_queue"
                layout="@layout/layout_kanban_column" />

            <!-- Process Column -->
            <include
                android:id="@+id/column_process"
                layout="@layout/layout_kanban_column" />

            <!-- Done Column -->
            <include
                android:id="@+id/column_done"
                layout="@layout/layout_kanban_column" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- List View -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_view_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/spacing_lg"
        android:clipToPadding="false"
        android:visibility="gone"
        tools:itemCount="5"
        tools:listitem="@layout/item_order_card" />

</LinearLayout>
