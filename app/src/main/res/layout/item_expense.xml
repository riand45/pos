<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="0dp"
    app:strokeColor="@color/border_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_md"
        android:gravity="center_vertical">

        <View
            android:id="@+id/category_indicator"
            android:layout_width="4dp"
            android:layout_height="40dp"
            android:background="@color/accent_primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical">

            <TextView
                android:id="@+id/expense_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                tools:text="Listrik &amp; Air" />

            <TextView
                android:id="@+id/expense_category_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_xs"
                tools:text="Utility â€¢ Oct 24, 2023" />

        </LinearLayout>

        <TextView
            android:id="@+id/expense_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/status_error"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            tools:text="- Rp 1.500.000" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/spacing_md"
            android:padding="6dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/text_tertiary"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
