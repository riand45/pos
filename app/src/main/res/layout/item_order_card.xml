<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    app:cardBackgroundColor="@color/surface_elevated"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="0dp"
    app:strokeColor="@color/border_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/order_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/accent_primary"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                tools:text="#ORD-1024" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_xs"
                tools:text="5M AGO" />

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="@dimen/spacing_sm"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/status_error" />

        </LinearLayout>

        <!-- Product Name -->
        <TextView
            android:id="@+id/order_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_md"
            tools:text="Double Cheeseburger XL" />

        <!-- Order Info -->
        <TextView
            android:id="@+id/order_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/text_size_sm"
            tools:text="5 Items â€¢ Dine-In" />

        <!-- Footer Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/order_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_lg"
                android:textStyle="bold"
                tools:text="$45.00" />

            <Button
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:background="@drawable/bg_button_primary"
                android:paddingHorizontal="@dimen/spacing_md"
                android:text="@string/finish"
                android:textColor="@color/background_primary"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_xs"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/btn_edit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:background="@drawable/bg_button_secondary"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit" />

            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_button_secondary"
                android:padding="@dimen/spacing_xs"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Next" />

        </LinearLayout>

        <!-- Progress Bar (for process column) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="@dimen/spacing_sm"
            android:progress="60"
            android:progressTint="@color/accent_primary"
            android:progressBackgroundTint="@color/background_tertiary"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
