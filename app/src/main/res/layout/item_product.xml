<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_sm"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="@dimen/corner_radius_md"
    app:cardElevation="0dp"
    app:strokeColor="@color/border_color"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/background_tertiary"
                android:contentDescription="Product" />

            <!-- Badge -->
            <TextView
                android:id="@+id/product_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="@dimen/spacing_sm"
                android:background="@drawable/bg_button_success"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:text="NEW"
                android:textColor="@color/background_primary"
                android:textSize="@dimen/text_size_xs"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Low Stock Badge -->
            <TextView
                android:id="@+id/low_stock_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="@dimen/spacing_sm"
                android:background="@drawable/bg_badge_warning"
                android:paddingHorizontal="@dimen/spacing_sm"
                android:paddingVertical="@dimen/spacing_xs"
                android:text="LOW STOCK"
                android:textColor="@color/background_primary"
                android:textSize="@dimen/text_size_xs"
                android:textStyle="bold"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Product Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Wireless Headphones Max" />

            <TextView
                android:id="@+id/product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/accent_primary"
                android:textSize="@dimen/text_size_xs"
                android:textAllCaps="true"
                tools:text="ELECTRONICS" />

            <!-- Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/accent_primary"
                    android:textSize="@dimen/text_size_lg"
                    android:textStyle="bold"
                    tools:text="$299.00" />

                <ImageView
                    android:id="@+id/btn_edit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:padding="@dimen/spacing_xs"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="Edit"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:padding="@dimen/spacing_xs"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </LinearLayout>

            <!-- HPP (COGS) Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HPP (COGS)"
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/text_size_xs" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/product_cogs_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/status_success"
                    android:textSize="@dimen/text_size_xs"
                    tools:text="$150.00" />

            </LinearLayout>

            <!-- Stock Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STOCK STATUS"
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/text_size_xs" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <View
                    android:id="@+id/stock_indicator"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/indicator_done" />

                <TextView
                    android:id="@+id/stock_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_xs"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_sm"
                    tools:text="45 units" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
