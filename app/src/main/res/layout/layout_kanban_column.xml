<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/kanban_column_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:background="@drawable/bg_card"
    android:padding="@dimen/spacing_md">

    <!-- Column Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/spacing_md">

        <TextView
            android:id="@+id/column_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_sm"
            android:textStyle="bold"
            tools:text="ANTRIAN" />

        <TextView
            android:id="@+id/column_count"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/spacing_sm"
            android:background="@drawable/bg_button_primary"
            android:gravity="center"
            android:textColor="@color/background_primary"
            android:textSize="@dimen/text_size_xs"
            android:textStyle="bold"
            tools:text="5" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/column_menu"
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:src="@drawable/ic_more"
            android:contentDescription="Menu" />

    </LinearLayout>

    <!-- Order Cards RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orders_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        tools:listitem="@layout/item_order_card" />

</LinearLayout>
