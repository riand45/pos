<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Pos" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/accent_primary</item>
        <item name="colorPrimaryDark">@color/accent_primary_dark</item>
        <item name="colorPrimaryVariant">@color/accent_primary_dark</item>
        <item name="colorOnPrimary">@color/background_primary</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/accent_secondary</item>
        <item name="colorSecondaryVariant">@color/accent_light</item>
        <item name="colorOnSecondary">@color/background_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_secondary</item>
        <item name="colorSurfaceVariant">@color/background_tertiary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/background_primary</item>
        <item name="android:navigationBarColor">@color/background_secondary</item>
        
        <!-- Error -->
        <item name="colorError">@color/status_error</item>
        <item name="colorOnError">@color/text_primary</item>
    </style>
    
    <!-- Card Style -->
    <style name="PosCardStyle" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/border_color</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    
    <!-- Elevated Card -->
    <style name="PosCardElevated" parent="PosCardStyle">
        <item name="cardBackgroundColor">@color/surface_elevated</item>
    </style>
    
    <!-- Primary Button -->
    <style name="PosPrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_primary</item>
        <item name="android:textColor">@color/background_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Secondary Button -->
    <style name="PosSecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/border_color</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Chip Style -->
    <style name="PosChipStyle" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/background_tertiary</item>
        <item name="chipStrokeColor">@color/border_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="checkedIconVisible">false</item>
    </style>
    
    <!-- Selected Chip -->
    <style name="PosChipSelected" parent="PosChipStyle">
        <item name="chipBackgroundColor">@color/accent_primary</item>
        <item name="android:textColor">@color/background_primary</item>
    </style>
    
    <!-- Text Input Style -->
    <style name="PosTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/background_tertiary</item>
        <item name="boxStrokeColor">@color/border_color</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>
    
    <!-- Bottom Sheet Style -->
    <style name="PosBottomSheetStyle" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/background_secondary</item>
        <item name="shapeAppearance">@style/PosBottomSheetShape</item>
    </style>
    
    <style name="PosBottomSheetShape" parent="">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
    </style>
    
    <!-- Dialog Style -->
    <style name="PosDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@color/background_secondary</item>
        <item name="colorSurface">@color/background_secondary</item>
    </style>

    <!-- Full Screen Dialog -->
    <style name="FullScreenDialog" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/background_secondary</item>
        <item name="android:statusBarColor">@color/background_secondary</item>
    </style>
</resources>